@model ImageGallery.Models.UserPosts
@{
    ViewBag.Title = "Upload Posts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Upload Photos</h2>
<div class="well">
    @using (Html.BeginForm("CreatePosts", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(m => Model.UserName, new { @class = "control-label col-sm-3" })
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control required" })
                    @Html.ValidationMessageFor(model => model.UserName)
                    @*@Html.HiddenFor(m => m.UserName)*@
                
                </div>

            </div>
            <div class="form-group">
                @Html.LabelFor(m => Model.Comments, new { @class = "control-label col-sm-3" })
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.Comments, new { @class = "form-control required" })
                    @Html.ValidationMessageFor(model => model.Comments)
                </div>

            </div>
            @*<div class="form-group">

                @Html.LabelFor(m => Model.Posts, new { @class = "control-label col-sm-3" })
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.Posts, new { @class = "form-control required" })
                    @Html.ValidationMessageFor(model => model.Posts)
                
                    @Html.HiddenFor(m => m.Posts)
                </div>
            </div>*@
            @*<div class="form-group">
                @Html.Label("Choose Image(s)", new { @class = "control-label col-sm-3" })
                <div class="col-sm-5">
                    <input type="file" name="files"
                           multiple="multiple" accept=".jpg, .png, .gif" />
                </div>
            </div>*@
         
            <div class="form-group">
                <div class="col-sm-5 col-sm-offset-3">
                    <input id="postdata" type="submit" value="Save" class="btn btn-primary" />
                    <div style="color:red">
                        @ViewBag.error
                    </div>
                </div>
            </div>
          
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


